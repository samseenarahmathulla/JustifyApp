<% @user_type = "lawfirm" %>
<div class="panel-body">
	<div class="row">
		<div class="col-lg-12">
			<%= form_for(@user, url: lawfirm_path(params[:id]), :method => "PUT", :html => { :id => "login-form-lawfirm", :style => "display: block;" }) do |f| %>
				<div class="form-group">
					<%= f.text_field :name_of_firm, autofocus: true, tabindex: "1", class: "form-control", placeholder: "Name of Firm", required: true %>
				</div>
				<div class="form-group">
					<%= f.text_field :first_name, tabindex: "2", class: "form-control", placeholder: "First Name", required: true %>
				</div>
				<div class="form-group">
					<%= f.text_field :last_name, tabindex: "3", class: "form-control", placeholder: "Last Name", required: true %>
				</div>
				<div class="form-group">
					<%= f.email_field :email, tabindex: "4", class: "form-control", placeholder: "Email", required: true, oninput: "inputEmail(this.value, '#{@user_type}', #{params[:id]})" %>
				</div>
				<div class="form-group">
					<%= f.country_select :country, priority_countries = ["SG"], options = { }, html_options = {:class => "form-control", :tabindex => "5"} %>
				</div>
				<div class="form-group">
					<%= f.text_field :phone, tabindex: "6", class: "form-control", placeholder: "Phone", required: true %>
				</div>
				<div class="form-group">
					<%= f.text_field :phone_of_firm, tabindex: "7", class: "form-control", placeholder: "Phone of Firm" %>
				</div>
				<div class="form-group">
					<%= f.text_field :zipcode, tabindex: "8", class: "form-control", placeholder: "Zip Code", required: true %>
				</div>
				<div class="form-group">
					<%= f.text_field :area_of_practice, tabindex: "9", class: "form-control", placeholder: "Area of Practice", required: true %>
				</div>
				<div class="form-group">
					<span class="btn btn-default btn-file" data-toggle="tooltip" title="Please upload your document(s)"> Attach
						Document(s)
						<input type="file", tabindex="10">
					</span>
				</div>
				<input type="hidden" id="email_check" value="">
				<div class="form-group">
					<div class="row">
						<div class="col-sm-6 col-sm-offset-3">
							<input type="submit" name="register-submit" id="register-submit" tabindex="11" class="form-control btn btn-register" value="Submit" onclick="checkEmail('<%= @user_type %>', <%= params[:id] %>)">
						</div>
					</div>
				</div>
			<% end %>
			<%= form_for(@user, url: lawfirm_path(params[:id]), html: { method: :put, :id => "register-form-lawfirm", :style => "display: none;" }) do |f| %>
				<div class="form-group">
					<%= f.password_field :password, autocomplete: "off", tabindex: "1", class: "form-control", placeholder: "Password", required: true, oninput: "inputVal(this.value, '#{@user_type}')" %>
				</div>
				<div class="form-group">
					<%= f.password_field :password_confirmation, autocomplete: "off", tabindex: "2", class: "form-control", placeholder: "Confirm Password", required: true, oninput: "check('#{@user_type}')" %>
				</div>
				<input type="hidden" id="password_match_check" value="">
				<div class="form-group">
					<div class="row">
						<div class="col-sm-6 col-sm-offset-3">
							<input type="submit" name="login-submit" id="login-submit" tabindex="3" class="form-control btn btn-login" value="Reset Password">
						</div>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>